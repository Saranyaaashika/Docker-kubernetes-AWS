apiVersion: apps/v1
kind: Deployment
metadata:
  name: springboot-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: springboot
  template:
    metadata:
      labels:
        app: springboot
    spec:
      containers:
      - name: springboot-container
        image: my-springboot-app 
        imagePullPolicy: Never  # this is your local image
        ports:
        - containerPort: 8000





apiVersion: v1
kind: Service
metadata:
  name: springboot-service
spec:
  type: NodePort
  selector:
    app: springboot
  ports:
  - port: 5555
    targetPort: 5555
    nodePort: 30080 
